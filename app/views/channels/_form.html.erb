<%= semantic_form_for @channel, {:html => { :class => "form-horizontal" }} do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :short_name %>
    <%= f.input :black_flag %>
    <%= f.input :xmltv_id %>
    <%= f.input :free_or_pay %>
  <% end %>
  <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn-mini btn-primary"} %> 
  <% end %>
<% end %>