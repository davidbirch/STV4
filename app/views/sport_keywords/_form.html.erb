<%= semantic_form_for @sport_keyword, {:html => { :class => "form-horizontal" }} do |f| %>
  <%= f.inputs do %>
    <%= f.input :rule_type, :input_html => {:value => params[:rule_type] } %>
    <%= f.input :value, :input_html => { :value => params[:value] }  %>
    <%= f.input :sport, :input_html => { :value => params[:sport] } %>
    <%= f.input :priority, :input_html => { :value => params[:priority] } %>
  <% end %>
  <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn-mini btn-primary"} %> 
  <% end %>
<% end %>