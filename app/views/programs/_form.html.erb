<%= semantic_form_for @program, {:html => { :class => "form-horizontal" }} do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :region %>
    <%= f.input :sport %>
    <%= f.input :channel %>    
    <%= f.input :start_datetime %>
    <%= f.input :end_datetime %>
  <% end %>
  <%= f.actions do %>
      <%= f.action :submit, :button_html => { :class => "btn-mini btn-primary"} %> 
  <% end %>
<% end %>