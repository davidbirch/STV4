<h3>Listing Programs</h3>
<p><%= link_to 'New', new_program_path, :class => 'btn btn-mini btn-primary' %></p>
<table class="table table-striped table-condensed admin">
  <thead>
    <tr>
      <th>Region</th>
      <th></th>
      <th>Full Title</th>
      <th>Sport</th>
      <th>Channel</th>
      <th>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.region.name %></td>
        <td><%= link_to "<i class=\"icon-search\"></i>".html_safe, "http://www.google.com.au/search?q=" + program.full_title, :target => "_blank" %></td>
        <td><%= link_to program.full_title, program %></td>
        <td><%= program.sport.name %></td>
        <td><%= program.channel.name %></td>
        <td><%= program.local_start_date %></td>
        <td><%= program.local_start_time %></td>
        <td><%= program.local_end_time %></td>  
        <td>
          <%= link_to 'Edit', edit_program_path(program), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', program, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>